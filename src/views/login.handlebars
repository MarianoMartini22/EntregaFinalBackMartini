<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-5">
            <h2 class="mb-4">Iniciar Sesión</h2>
            <form id="loginForm" onsubmit="loginUser(event)" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="mb-3">
                    <label for="contrasena" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="contrasena" name="password" required>
                </div>
                <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                <div id="loginError" class="mt-3 alert alert-danger d-none">Usuario o contraseña incorrectos.</div>
                <hr />
                <div class="mb-3">
                    <a href="/login-github" class="btn btn-secondary">Iniciar Sesión con GitHub</a>
                </div>


            </form>
        </div>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/user.js"></script>